---
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

export interface Props {
  content: {
    title: string
    description: string
    bannerImage?: string
  }
}

const {
  content: { title, description, bannerImage },
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={bannerImage} />
    <style>
      article {
        @apply flex flex-col gap-2;
      }
      article div.content {
        @apply flex flex-col gap-2 px-4 text-justify;
      }
    </style>
  </head>

  <body>
    <Header title={title} />
    <main>
      <article>
        {
          bannerImage && (
            <img
              width={720}
              height={360}
              src={bannerImage}
              alt="banner image"
            />
          )
        }

        <div class="content">
          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
