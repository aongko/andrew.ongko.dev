---
import { SITE_TITLE } from "../config"
import Navbar from "./Navbar.astro"

export interface Props {
  title?: string
}

const title = Astro.props.title ?? SITE_TITLE
---

<header>
  <div class="flex gap-2">
    <img src="/logo/white-bg-red.svg" width={32} height={32} alt="Logo" />
    <h1>{title}</h1>
  </div>

  <Navbar />
</header>
<style>
  header {
    @apply border-b border-gray-50 px-4;
  }
</style>
